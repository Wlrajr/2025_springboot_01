<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ict.edu01.members.mapper.MembersMapper">
    <select id="getLogin" resultType="MembersVO" parameterType="MembersVO">
        select * from members where m_id=#{m_id} and m_pw=#{m_pw}
    </select>

    <insert id="addMember" parameterType="MembersVO" useGeneratedKeys="true" keyProperty="m_idx">
        INSERT INTO members (m_id, m_pw, m_name, m_email, m_phone, m_reg)
        VALUES (#{m_id}, #{m_pw}, #{m_name}, #{m_email}, #{m_phone}, NOW())
        </insert>

    <select id="getMemberByIdx" resultType="MembersVO" parameterType="int">
        SELECT * FROM members WHERE m_idx = #{m_idx}
    </select>
</mapper>